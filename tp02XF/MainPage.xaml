                    Clicked="btnEventTriggers"/>
        
            <Button Text="Estilo Global"/>
        
            <Label Text="Passar parametro" 
                   HorizontalOptions="Center" 
                   FontSize="25" 
                   TextColor="Red"/>
        
            <Button Text="Estilo Home"/>
        
            <Button Text="Messaging Center"/>
        
            <Label Text="ListView"
                   HorizontalOptions="Center" 
                   FontSize="25"
                   TextColor="Red"/>
        
