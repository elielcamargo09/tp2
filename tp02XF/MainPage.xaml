             x:Class="tp02XF.MainPage">

    <StackLayout>
            <Label Text="Style Resources" 
               HorizontalOptions="Center"
               FontSize="25"
               TextColor="Red"/>
        
            <Button Text="Estilo Padrão"
                    Clicked="btnEstiloPadrão"/>
        
            <Button Text="Estio Dinâmico" 
                    Clicked="btnEstiloDinamico"/>
        
